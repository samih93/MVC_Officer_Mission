@model IEnumerable<MVC_Officer_Mission.Models.Officer>

@{
    ViewBag.Title = "الضباط";
}

<h2>الضباط</h2>
@if (@Request.IsAuthenticated && User.IsInRole("admin"))
{
    <p>
        @Html.ActionLink("إضافة ضابط", "Create", null, new { @class = "action_link" })
    </p>
}
<table class="table table-striped table-bordered dt-responsive nowrap dataTable">
    <thead>

        <tr>
            <th class="no-sort">
                <img src="" @Html.DisplayNameFor(model => model.ProfileImage) />
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department.Name)
            </th>
            <th class="no-sort">
                @Html.DisplayNameFor(model => model.Rank.Name)
            </th>
            <th class="no-sort">
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th class="no-sort">
                @Html.DisplayNameFor(model => model.LastName)
            </th>

            <th class="no-sort">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th class="no-sort">
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th class="no-sort">
                @Html.DisplayNameFor(model => model.IsHeadOfDepartment)
            </th>

            <th class="no-sort">
                @Html.DisplayNameFor(model => model.IsInInstitute)
            </th>
            <th class="no-sort">
                @Html.DisplayNameFor(model => model.Specifications.First().Name)
            </th>
            <th></th>
        </tr>

    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img class="officerProfileImagecard-bkimg" alt="" width="75" src="~/Media/OfficersProfileImages/@MVC_Officer_Mission.Controllers.OfficersController.getOfficerProfileImage(item)" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rank.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.IsHeadOfDepartment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsInInstitute)
                </td>
                <td>
                    @(!String.IsNullOrEmpty(MVC_Officer_Mission.Controllers.OfficersController.GetOfficerSpecificationsString(item)) ? MVC_Officer_Mission.Controllers.OfficersController.GetOfficerSpecificationsString(item) : "-")
                </td>
                <td>
                    @if (@Request.IsAuthenticated)
                    {
                        if (User.IsInRole("admin"))
                        {
                            @Html.ActionLink("تعديل", "Edit", new { id = item.Id }) <span>|</span>
                            @Html.ActionLink("الملف", "Details", new { id = item.Id }) @*<span>|</span>
                                @Html.ActionLink("حذف", "Delete", new { id = item.Id })*@
                        }
                        else
                        {
                            if (User.IsInRole("general") || User.IsInRole("standard"))
                            {
                                @Html.ActionLink("الملف", "Details", new { id = item.Id })
                            }

                        }

                    }

                </td>
            </tr>
        }
    </tbody>

</table>


@section Styles {
    @Styles.Render("~/Content/DataTables")
}

@section Scripts{
    @Scripts.Render("~/bundles/DataTables")
    <script>
        $(document).ready(function () {
            $('.dataTable').DataTable({
                "order": [],
                "language": DataTablesLang,
                "columnDefs": [{
                    "targets": 'no-sort',
                    "orderable": false,
                }]
            });
        });
    </script>
    <script>
        $('.OfficerLink').addClass("activelink");
    </script>
}





