@using MVC_Officer_Mission.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/Media/officer_favicon.jpg" type="image/x-icon" />

    <title>@ViewBag.Title - مهام الضباط</title>
    @RenderSection("Styles", required: false)
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <img class="img_headr_left" runat="server" src="~/Media/ma3had.png" />
        <img class="img_headr_right" runat="server" src="~/Media/ma3had.png" />
        <div class="container">
            <div class="navbar-header">


                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <h1 class="app_title">معهد قوى الأمن الداخلي - فرع التدريب - مهام الضباط</h1>
                <ul class="nav navbar-nav">
                    @if (@Request.IsAuthenticated && User.IsInRole("admin"))
                    {
                        //if (User.Identity.Name.Equals("kalam-khedme@isf.com"))
                        //{
                        @*<ul class="nav navbar-nav">
                <li>@Html.ActionLink("الضباط", "Index", "Officers")</li>
            </ul>
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("الرزنامة الأساسية", "Calendar_M_AND_T", "Missions")</li>
            </ul>*@
                        //}
                        //else
                        //{
                        <li>@Html.ActionLink("التخصص", "Index", "Specifications", null, new { @class = "SpecificationIndex" })</li>
                        <li>@Html.ActionLink("الضباط", "Index", "Officers", null, new { @class = "OfficerLink" })</li>
                        <li>@Html.ActionLink("رزنامة الدورات", "Index", "Tournaments", null, new { @class = "TournamentLink" })</li>
                        <li>@Html.ActionLink("الرزنامة الأساسية", "Calendar_M_AND_T", "Missions", null, new { @class = "CalendarM__AND_TLink" })</li>

                        @*}*@

                    }
                    else
                    {
                        if (User.IsInRole("general") || User.IsInRole("standard"))
                        {
                            <li>@Html.ActionLink("الضباط", "Index", "Officers", null, new { @class = "OfficerLink" })</li>

                            <li>@Html.ActionLink("الرزنامة الأساسية", "Calendar_M_AND_T", "Missions", null, new { @class = "CalendarM__AND_TLink" })</li>
                        }
                        else
                        {
                            if (User.IsInRole("SuperAdmin"))
                            {
                                <li>@Html.ActionLink("التخصص", "Index", "Specifications", null, new { @class = "SpecificationIndex" })</li>
                                <li>@Html.ActionLink("الضباط", "Index", "Officers", null, new { @class = "OfficerLink" })</li>
                                <li>@Html.ActionLink("رزنامة الدورات", "Index", "Tournaments", null, new { @class = "TournamentLink" })</li>
                                <li>@Html.ActionLink("الرزنامة الأساسية", "Calendar_M_AND_T", "Missions", null, new { @class = "CalendarM__AND_TLink" })</li>
                                <li>@Html.ActionLink("Add New Password", "AddnewPassword", "Account", null, null)</li>
                                <li>@Html.ActionLink("Register New User", "Register", "Account", null, null)</li>
                                <li>@Html.ActionLink("Manage User Role", "ListOfRoles", "Administration", null, null)</li>
                            }
                        }
                    }
                </ul>



                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @{ MessagingSystem msg = (MessagingSystem)TempData["message"];}
        @if (msg != null)
        {
            @Html.Raw(MessagingSystem.GenerateMessage(msg.Message, msg.MessageType))
        }

        @{ MessagingSystem additionalMessage = (MessagingSystem)TempData["additionalMessage"];}
        @if (additionalMessage != null)
        {
            @Html.Raw(MessagingSystem.GenerateMessageForOfficer(additionalMessage.Message, additionalMessage.MessageType))
        }
        @RenderBody()
        <hr />
        @*<footer>
                <p>&copy; @DateTime.Now.Year - Officer Mission</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
    @Scripts.Render("~/bundles/custom")

</body>
</html>
