@model IEnumerable<MVC_Officer_Mission.Models.Specification>

@{
    ViewBag.Title = "التخصصات";
}

<h2>التخصصات</h2>

<p>
    @Html.ActionLink("إضافة تخصص", "Create", null, new { @class = "action_link" })
</p>
<table class="table">
    <tr>
        <th class="col-md-3">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("تعديل", "Edit", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@section Scripts
{
    <script>
        $('.SpecificationIndex').addClass("activelink");
    </script>

}
