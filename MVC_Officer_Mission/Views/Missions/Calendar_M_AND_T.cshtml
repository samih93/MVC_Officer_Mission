                                        <td><text id="dep">@item.Tournament.Department</text></td>
                                    </tr>
                                    <tr>
                                        <td>القاعة</td>
                                        <td> : </td>
                                        <td><text id="room">@item.Tournament.Room</text></td>
                                    </tr>
                                    <tr>
                                        <td>امر المستند</td>
