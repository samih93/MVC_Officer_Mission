                                    </tr>
                                    <tr>
                                        <td>تاريخ التخريج</td>
                                        <td> : </td>
                                        <td><text id="mission_Date">@grad_date</text></td>
                                    </tr>
                                    <tr>
                                        <td> الجهة المانحة</td>
                                        <td> : </td>
                                        <td><text id="mission_Date">@item.Tournament.Provider</text></td>
                                    </tr>
                                }

                                @if (@Request.IsAuthenticated && User.IsInRole("admin"))
                                {
                                    <tr><td></td><td></td><td></td></tr>
                                    <tr>
